<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliderQuestion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="sliderQuestion"
    android:orientation="vertical" >

	<org.orcatech.mobileresearchtool.survey.MarkDownTextView
	    android:id="@+id/questionText"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    style="@style/MainTextStyle"
	    android:padding="20dp"
	    android:textSize="20sp"
	    android:text="@string/question_error_text" >
	</org.orcatech.mobileresearchtool.survey.MarkDownTextView>

	<View
	    android:id="@+id/numbersPlaceholder"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" />

    <org.orcatech.mobileresearchtool.survey.SeekBarEditableThumb
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:max="4"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="50dp"
        android:progress="2" >
    </org.orcatech.mobileresearchtool.survey.SeekBarEditableThumb>

</LinearLayout>